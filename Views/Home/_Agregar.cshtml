@model Noticia

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="text-center ele">
        <h1>Agregar Noticia</h1>
    </div>

    <form asp-action="Index" asp-controller="Home" method="post">
        @Html.ValidationSummary(true)

        <div class="mb-3">
            <label asp-for="Titulo" class="form-label">Titulo</label>
            <input asp-for="Titulo" class="form-control" placeholder="Ingrese el titulo de la Noticia" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>
        <div class="mb-3">

            <label class="form-label" asp-for="Categoria">Categoria</label>
            <select class="form-select" id="categoria">

                <option selected>Categoria</option>
                <option value="1">Sociales</option>
                <option value="2">Nacionales</option>
                <option value="3">Deportivas</option>
                <option value="4">Mundo</option>
            </select>
            <span asp-validation-for="Categoria" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Descripcion" class="form-label">Mensaje</label>
            <textarea class="form-control" asp-for="Descripcion" rows="5">
            </textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="FechaPublicacion" class="form-label">Fecha</label>
            <input asp-for="FechaPublicacion" class="form-control" placeholder="Infrese la fecha" />
            <span asp-validation-for="FechaPublicacion" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Agregar</button>
    </form>
</div>




